module contador #(parameter N = 8) (
    input wire clk,   // Señal de reloj
    input wire rst,   // Reset asincrónico
    output reg [N-1:0] count  // Salida del contador de N bits
);

always @(posedge clk or posedge rst) begin
    if (rst) begin
        count <= 0;  // Resetea el contador cuando rst es alto
    end else begin
        count <= count + 1;  // Incrementa el contador en cada flanco de subida del reloj
    end
end

endmodule
