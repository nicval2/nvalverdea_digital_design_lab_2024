module DigitExtractor (
    input [7:0] input_number,
    output [3:0] digit_1,
    output [3:0] digit_2,
    output [3:0] digit_3
);

    // Define decimal values for each binary digit
    // 0 to 9 in binary
    parameter [3:0] digit_values[9:0] = '{4'b0000, 4'b0001, 4'b0010, 4'b0011, 4'b0100,
                                            4'b0101, 4'b0110, 4'b0111, 4'b1000, 4'b1001};

    // Extract individual digits
    assign digit_1 = digit_values[input_number[7:4]];
    assign digit_2 = digit_values[input_number[3:0]];

endmodule
