`timescale 1ns / 1ps

module vgaController_tb;

    // Inputs
    logic vgaclk;
    
    // Outputs
    logic hsync, vsync, sync_b, blank_b;
    logic [9:0] x, y;

    // Instantiate the module under test
    vgaController dut (
        .vgaclk(vgaclk),
        .hsync(hsync),
        .vsync(vsync),
        .sync_b(sync_b),
        .blank_b(blank_b),
        .x(x),
        .y(y)
    );

    // Clock generation
    always #5 vgaclk = ~vgaclk;

    // Monitor signals
    initial begin
        // Initialize inputs
        vgaclk = 0;

        // Run simulation for some time
        repeat (10000) begin
            #1 vgaclk = !vgaclk;

            // Print outputs
            $display("x = %d, y = %d, hsync = %b, vsync = %b, sync_b = %b, blank_b = %b", x, y, hsync, vsync, sync_b, blank_b);
        end

        // Finish simulation
        $finish;
    end

endmodule
